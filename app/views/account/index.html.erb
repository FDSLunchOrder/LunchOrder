  <% @accounts.each do |account| %>
      <tr>
        <td><%= account.FirstName %></td>
        <td><%= account.LastName %></td>
        <td><%= account.Active %></td>
        <td><%= account.Location %></td>
        <td><%= account.Login %></td>
        <td><%= account.Debt %></td>
        <td><%= account.Need_Reminder %></td>
